model Restroom {
  id                String             @id @default(uuid())
  name              String             @db.VarChar(255)
  description       String?
  isPublic          Boolean
  rating            Float              @default(0.0)
  establishmentType EstablishmentType?
  latitude          Float
  longitude         Float
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  reviews Review[]

  @@map("restrooms")
}
